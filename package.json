    "@types/xterm": "^2.0.2",
    "chokidar": "^1.6.1",
    "electron": "^1.6.8",
    "express": "^4.15.2",
    "fs-extra": "^2.1.2",
    "glob": "^7.1.1",
    "inversify": "^3.1.0",
